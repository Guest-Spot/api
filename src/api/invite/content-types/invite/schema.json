{
  "kind": "collectionType",
  "collectionName": "invites",
  "info": {
    "singularName": "invite",
    "pluralName": "invites",
    "displayName": "Invite"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "reaction": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "accepted",
        "rejected"
      ]
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "invite_created",
        "invite_accepted",
        "invite_rejected"
      ]
    },
    "sender": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "recipient": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
