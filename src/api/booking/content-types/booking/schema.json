{
  "kind": "collectionType",
  "collectionName": "bookings",
  "info": {
    "singularName": "booking",
    "pluralName": "bookings",
    "displayName": "Booking"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "artist": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "name": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "phone": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "placement": {
      "type": "string"
    },
    "size": {
      "type": "string"
    },
    "references": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "start": {
      "type": "time"
    },
    "day": {
      "type": "date"
    },
    "owner": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "reaction": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "accepted",
        "rejected"
      ]
    },
    "rejectNote": {
      "type": "text"
    },
    "amount": {
      "type": "decimal"
    },
    "currency": {
      "type": "string",
      "default": "usd"
    },
    "paymentStatus": {
      "type": "enumeration",
      "default": "unpaid",
      "enum": [
        "unpaid",
        "authorized",
        "paid",
        "cancelled",
        "failed"
      ]
    },
    "stripePaymentIntentId": {
      "type": "string"
    },
    "stripeCheckoutSessionId": {
      "type": "string"
    },
    "platformFee": {
      "type": "decimal"
    },
    "authorizedAt": {
      "type": "datetime"
    }
  }
}
